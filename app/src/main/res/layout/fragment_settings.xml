<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/logout"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:layout_marginEnd="8dp"
            android:background="@drawable/grad_rectangle2"
            android:text="로그아웃"
            android:textColor="#000000"
            android:textSize="10dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/ranking1_img"
            android:layout_width="120dp"
            android:layout_height="90dp"

            android:scaleType="fitCenter"
            android:src="@drawable/loveperson"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/ranking1_taltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ranking1_img"
            android:layout_alignTop="@+id/ranking1_img"
            android:text="연예인"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/ranking1_simtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ranking1_img"
            android:layout_below="@+id/ranking1_taltv"
            android:text="20%"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ranking2_img"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/ranking1_img"
            android:layout_alignParentRight="true"

            android:layout_marginRight="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/loveperson"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"/>

        <TextView
            android:id="@+id/ranking2_taltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ranking2_img"
            android:layout_alignTop="@+id/ranking2_img"
            android:text="연예인"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/ranking2_simtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ranking2_img"
            android:layout_below="@+id/ranking2_taltv"
            android:text="20%"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ranking3_img"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@id/ranking1_img"
            android:layout_marginTop="350dp"
            android:scaleType="fitCenter"
            android:src="@drawable/loveperson"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/ranking3_taltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ranking3_img"
            android:layout_alignTop="@+id/ranking3_img"
            android:text="연예인"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/ranking3_simtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ranking3_img"
            android:layout_below="@+id/ranking3_taltv"
            android:text="20%"
            android:textSize="15dp" />


    </RelativeLayout>


</FrameLayout>