                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

